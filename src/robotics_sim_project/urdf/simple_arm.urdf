<?xml version="1.0"?>
<robot name="simple_arm_robot">
  
  <!-- Base Link (Fixed to the world) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.5"/>
    </geometry>
      <material name="blue"><color rgba="0 0 0.8 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.2 0.2 0.5"/></geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.15" ixy="0.0" ixz="0.0" 
               iyy="0.15" iyz="0.0" 
               izz="0.05"/>
    </inertial>
  </link>
  
  <!-- Arm Link (The moving part) -->
  <link name="arm_link">
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.1 0.1"/></geometry>
      <material name="red"><color rgba="0.8 0 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" 
               iyy="0.085" iyz="0.0" 
               izz="0.085"/>
    </inertial>
  </link>
  
  <!-- Revolute Joint -->
  <joint name="base_to_arm" type="revolute">
    <parent link="base_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/>
  </joint>
  
  <!-- Gazebo-specific material colors -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="arm_link">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>
